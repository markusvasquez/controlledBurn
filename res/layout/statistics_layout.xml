    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/statistics_warning"
        android:textSize="@dimen/textSizeCaption"
        android:layout_gravity="center_horizontal"
        android:paddingStart="@dimen/firstLeftTab"
        android:paddingEnd="@dimen/firstLeftTab"
        android:paddingTop="@dimen/smallVerticalTextPadding"
        android:paddingBottom="@dimen/smallVerticalTextPadding"/>

        </LinearLayout>
    </ScrollView>


