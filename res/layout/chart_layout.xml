<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="6"
    android:paddingStart="@dimen/firstLeftTab"
    android:paddingEnd="@dimen/firstLeftTab"
    android:paddingTop="@dimen/smallVerticalTextPadding"
    android:paddingBottom="@dimen/smallVerticalTextPadding"
    android:gravity="center"
    android:elevation="4dp"
    android:orientation="vertical"
    android:background="@color/quaternary_material_light"
    android:clipChildren="false">

    <com.github.mikephil.charting.charts.LineChart
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/chart"
        />

</LinearLayout>

